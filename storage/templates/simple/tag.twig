{% extends '_layout.twig' %}

{% set tag_year = "" %}

{% block body %}
    <section id="content" class="container">
        {% for post in posts %}
        <article id="{{ post.slug }}" class="article article-type-index" itemscope itemprop="blogPost">
            <h2 class="title" itemprop="name">{{ post.title }}</h2>

            <h4 class="time">
                <time datetime="{{ post.created_at }}" itemprop="datePublished">
                    Saturday, August 01, 2020
                    <!-- {{ post.created_at }} -->
                </time>
            </h4>

            <section class="content">
                {{ post.content|u.truncate(200, '...', false)|markdown_to_html }}
            </section>

            <p class="article-more-link">
                <a href="{{ post.url }}">Read More</a>
            </p>
        </article>
        {% endfor %}
    </section>
{% endblock %}
