{% extends "_layout.twig" %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}
    <section id="content" class="container">
        <!-- article-type- post/page/index -->
        <article id="{{ post.slug }}" class="article article-type-page" itemscope itemprop="blogPost">
            <h2 class="title" itemprop="name">{{ post.title }}</h2>

            <h4 class="time">
                <time datetime="{{ post.created_at }}" itemprop="datePublished">
                    {{ post.created_at }}
                </time>
            </h4>

            <section class="content">{{ post.content }}</section>
        </article>
    </section>

    <!-- Paging -->
    {#
    <section class="pagination">
        <nav class="container">
            {{ IF PAGE.prev }}
            <a class="extend prev" rel="prev" href="{{ PAGE.prev.url }}">
                <i><-</i>
                <span>{{ PAGE.prev.title }}</span>
            </a>
            {{ ELSE }}
            <a></a>
            {{- END }}

            {{ IF PAGE.next }}
            <a class="extend next" rel="next" href="{{ PAGE.next.url }}">
                <i>-></i>
                <span>{{ PAGE.next.title }}</span>
            </a>
            {{- END }}
        </nav>
    </section>
    #}
    <!-- /Paging -->

{% endblock %}
